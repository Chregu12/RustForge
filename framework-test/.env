APP_NAME=FoundryFramework
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite::memory:

# Redis (for Queue and Cache)
REDIS_URL=redis://127.0.0.1:6379
REDIS_POOL_SIZE=10

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=rustforge_cache_

# Queue
QUEUE_DRIVER=redis
QUEUE_PREFIX=queue:
QUEUE_TIMEOUT=300
