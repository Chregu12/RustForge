# RustForge - The Rust Application Framework
# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Application Settings
APP_NAME=RustForge
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=
LOG_LEVEL=debug

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# Choose one of the following DATABASE_URL formats:

# MySQL (uncomment and update credentials)
# DATABASE_URL=mysql://username:password@localhost:3306/rustforge_dev

# MariaDB (same format as MySQL)
# DATABASE_URL=mysql://username:password@localhost:3306/rustforge_dev

# PostgreSQL (uncomment and update credentials)
# DATABASE_URL=postgresql://username:password@localhost:5432/rustforge_dev

# SQLite (for development/testing - recommended for quick start)
DATABASE_URL=sqlite:///./database.sqlite

# Database Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_POOL_MIN_IDLE=3
DATABASE_POOL_MAX_LIFETIME=1800
DATABASE_CONNECT_TIMEOUT=10

# ============================================================
# REDIS CONFIGURATION (Optional but recommended)
# ============================================================
REDIS_URL=redis://127.0.0.1:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10
REDIS_CONNECT_TIMEOUT=5

# Redis Separate Databases (for different purposes)
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# ============================================================
# CACHE SETTINGS
# ============================================================
CACHE_DRIVER=redis
CACHE_TTL=3600
CACHE_PREFIX=rustforge_cache_

# ============================================================
# QUEUE SETTINGS
# ============================================================
QUEUE_DRIVER=redis
QUEUE_CONNECTION=redis
QUEUE_TIMEOUT=300

# ============================================================
# SESSION SETTINGS
# ============================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ============================================================
# MAIL SETTINGS
# ============================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@rustforge.local
MAIL_FROM_NAME=Foundry Framework

# ============================================================
# EXTERNAL SERVICES
# ============================================================
# Add your service keys here
STRIPE_KEY=
STRIPE_SECRET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
