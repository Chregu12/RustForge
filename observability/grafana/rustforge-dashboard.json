{
  "dashboard": {
    "title": "RustForge Performance Dashboard",
    "tags": ["rustforge", "performance", "observability"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Command Execution Rate",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(rustforge_commands_total[5m])",
            "legendFormat": "{{command_name}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Command Duration (p95)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rustforge_command_duration_seconds_bucket[5m]))",
            "legendFormat": "{{command_name}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(rustforge_command_duration_seconds_bucket[5m]))",
            "legendFormat": "{{command_name}} - p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (seconds)",
            "format": "s"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(rustforge_commands_failed_total[5m])",
            "legendFormat": "{{command_name}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Errors/sec",
            "format": "short"
          }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(rustforge_cache_hits_total[5m]) / (rate(rustforge_cache_hits_total[5m]) + rate(rustforge_cache_misses_total[5m]))",
            "legendFormat": "{{cache_name}} - Hit Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Hit Rate",
            "format": "percentunit",
            "max": 1,
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(rustforge_http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rustforge_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rustforge_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}} - p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (seconds)",
            "format": "s"
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "rustforge_db_connections_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "rustforge_db_connections_idle",
            "legendFormat": "Idle",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Connections",
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {
          "x": 8,
          "y": 24,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rustforge_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (seconds)",
            "format": "s"
          }
        ]
      },
      {
        "id": 9,
        "title": "Queue Size",
        "type": "graph",
        "gridPos": {
          "x": 16,
          "y": 24,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "rustforge_queue_size",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Messages",
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "Application Uptime",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "rustforge_app_uptime_seconds",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 11,
        "title": "Requests In Flight",
        "type": "stat",
        "gridPos": {
          "x": 8,
          "y": 32,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "rustforge_http_requests_in_flight",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        }
      },
      {
        "id": 12,
        "title": "Total Errors (24h)",
        "type": "stat",
        "gridPos": {
          "x": 16,
          "y": 32,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(increase(rustforge_errors_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "value": null,
              "color": "green"
            },
            {
              "value": 100,
              "color": "yellow"
            },
            {
              "value": 1000,
              "color": "red"
            }
          ]
        }
      }
    ]
  }
}
