# RustForge Observability Configuration
# Copy this file to .env and adjust values for your environment

# ============================================================================
# OpenTelemetry Configuration
# ============================================================================

# Enable/disable OpenTelemetry tracing
OTEL_ENABLED=true

# OTLP endpoint for traces and metrics
# For local development with docker-compose
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Service name (shown in Jaeger and Grafana)
OTEL_SERVICE_NAME=rustforge

# Trace sampling rate (0.0 to 1.0)
# 1.0 = sample all traces (development)
# 0.1 = sample 10% of traces (production)
OTEL_TRACES_SAMPLER_ARG=1.0

# Use TLS for OTLP connection
OTEL_EXPORTER_OTLP_TLS=false

# ============================================================================
# Prometheus Configuration
# ============================================================================

# Enable/disable Prometheus metrics
PROMETHEUS_ENABLED=true

# Metrics endpoint path
PROMETHEUS_ENDPOINT=/metrics

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# Use JSON formatted logs (recommended for production)
LOG_JSON=false

# ============================================================================
# Application Configuration
# ============================================================================

# Environment name (development, staging, production)
ENVIRONMENT=development

# Application version (optional, defaults to Cargo.toml version)
APP_VERSION=0.1.0

# ============================================================================
# HTTP Server Configuration
# ============================================================================

# Server bind address
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=3000

# ============================================================================
# Production Overrides (uncomment for production)
# ============================================================================

# OTEL_TRACES_SAMPLER_ARG=0.1          # Sample 10% of traces
# LOG_JSON=true                         # Enable JSON logging
# ENVIRONMENT=production                # Set production environment
# RUST_LOG=warn                         # Reduce log verbosity
